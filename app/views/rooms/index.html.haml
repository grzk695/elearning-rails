.well
  -if current_user && current_user.admin?
    #newRoom
      %fieldset
        %legend Stwórz nowy pokój
        = form_for(@new_room) do |f|
          Nazwa pokoju #{f.text_field :name}
          %br/
          %br/
          Opis pokoju #{f.text_area:description}
          %br/
          %br/
          Czy ma być publiczny?#{f.check_box :public}
          %br/
          %br/
          = f.submit
  %h1 Lista pubicznych pokoi
  %table{:class => "table table-hover"}
    %tr
      %th Name
      %th Description
      %th Link
    - @rooms.all.each do |room|
      %tr
        %td= room.name
        %td= room.description
        %td= link_to("click",party_path(room.id))

